#!/bin/bash


echo "AWS Account ID: $AWS_ACCOUNT_ID"
echo "AWS Region: $_AWS_REGION"
echo "AWS Profile: $_AWS_PROFILE"
echo "GitHub Commit Hash: $GITHUB_COMMIT_HASH"

echo "AWS Access Key ID: $AWS_ACCOUNT_ID"
aws ecr get-login-password --region "${_AWS_REGION}" --profile "${_AWS_PROFILE}" | docker login --username AWS --password-stdin "${AWS_ACCOUNT_ID}".dkr.ecr."${_AWS_REGION}".amazonaws.com
docker build -t "lambda-function-image" .
docker tag "lambda-function-image" "${AWS_ACCOUNT_ID}".dkr.ecr."${_AWS_REGION}".amazonaws.com/"${PREFIX}"-ecr:latest
docker push "${AWS_ACCOUNT_ID}".dkr.ecr."${_AWS_REGION}".amazonaws.com/"${PREFIX}"-ecr:latest

docker tag "lambda-function-image" "${AWS_ACCOUNT_ID}".dkr.ecr."${_AWS_REGION}".amazonaws.com/"${PREFIX}"-ecr:"${GITHUB_COMMIT_HASH}"
docker push "${AWS_ACCOUNT_ID}".dkr.ecr."${_AWS_REGION}".amazonaws.com/"${PREFIX}"-ecr:"${GITHUB_COMMIT_HASH}"
